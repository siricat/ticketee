<%= form_for [@project, @ticket], :html => { :multipart => true } do |f| %>
<!-- multipart is used for any html form with a file-upload field inside -->
<!-- rails 3.1+ doesn't need that but preferable (at least to ryan bigg) -->

  <%= f.error_messages %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  
  <% number = 0 %>
  <%= f.fields_for :assets do |asset| %>
    <p>
      <%= asset.label :asset, "File ##{number += 1}" %>
      <%= asset.file_field :asset %>
    </p>
  <% end %>
  
  <%= f.submit %>
<% end %>