<strong>New Comment</strong>
<%= form_for [@ticket, @comment] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :text %>
    <%= f.text_area :text %>
  </p>
  <% authorized?(:"change states", @project) do %>
    <p>
      <%= f.label :state_id %>
      <%= f.select :state_id, State.all.map { |s| [s.name, s.id] },
                   :selected => @ticket.state_id %>
    </p>
    <%= render "tags/form" %>
  <% end %>
  
  <%= f.submit %>
<% end %>